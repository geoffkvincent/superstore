<h1><%= @department.name %> - <%= @item.name %></h1>
<p><%= @item.product_description %></p>
<p><%= "#{@item.quantity} : in stock" %></p>
<button id='cart'>Add to Cart</button>
<button id='view_cart'>View Cart</button>

<h2>Comments</h2>

<% @item.comments.each do |comment| %>
  <%= render 'comments/comment', { comment: comment } %>
<% end %>

<hr />
<%= link_to 'Add Comment', new_item_comment_path(@item) %>

<%= link_to 'Edit Item', edit_department_item_path([@department, @item]) %>
<%= link_to 'Delete Item', [@department, @item], method: :delete %>
<%= link_to 'Back To Item', department_items_path(@department) %>

